<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.fly.camerademo.widget.CameraView
        android:id="@+id/camera_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <LinearLayout
        android:id="@+id/btn_layout"
        android:layout_width="match_parent"
        android:layout_height="50.0dp"
        android:layout_alignParentTop="true"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_1"
            android:layout_width="0.0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/buttton_click"
            android:gravity="center"
            android:text="亮度" />

        <View
            android:layout_width="2.0dp"
            android:layout_height="match_parent"
            android:background="#60000000" />

        <Button
            android:id="@+id/btn_2"
            android:layout_width="0.0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/buttton_click"
            android:gravity="center"
            android:text="饱和度" />

        <View
            android:layout_width="2.0dp"
            android:layout_height="match_parent"
            android:background="#60000000" />

        <Button
            android:id="@+id/btn_3"
            android:layout_width="0.0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/buttton_click"
            android:gravity="center"
            android:text="辅助线" />

        <View
            android:layout_width="2.0dp"
            android:layout_height="match_parent"
            android:background="#60000000" />

        <Button
            android:id="@+id/btn_4"
            android:layout_width="0.0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/buttton_click"
            android:gravity="center"
            android:text="水平仪" />
        <View
            android:layout_width="2.0dp"
            android:layout_height="match_parent"
            android:background="#60000000" />

        <Button
            android:id="@+id/btn_5"
            android:layout_width="0.0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/buttton_click"
            android:gravity="center"
            android:text="灰阶滤镜" />
    </LinearLayout>
    <SeekBar
        android:id="@+id/seekbar_1"
        android:layout_width="match_parent"
        android:layout_below="@id/btn_layout"
        android:layout_height="50.0dp"
        android:visibility="gone"/>
    <SeekBar
        android:id="@+id/seekbar_2"
        android:layout_width="match_parent"
        android:layout_below="@id/btn_layout"
        android:layout_height="50.0dp"
        android:visibility="gone"/>

    <com.fly.camerademo.widget.GuideView
        android:id="@+id/guide_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/btn_layout"
        android:visibility="gone" />

    <com.fly.camerademo.widget.LevelView
        android:id="@+id/level_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/btn_layout"
        android:layout_marginLeft="3.0dp"
        android:layout_marginRight="3.0dp"
        android:visibility="gone" />
    <ImageButton
        android:id="@+id/tack_pic"
        android:src="@drawable/tack_pic"
        android:background="@drawable/buttton_click"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="80.0dp"
        android:layout_width="60.0dp"
        android:layout_height="60.0dp" />
</RelativeLayout>
